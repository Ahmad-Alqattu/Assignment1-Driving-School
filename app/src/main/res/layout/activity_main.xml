<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1AD321"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imgMain"
        android:layout_width="293dp"
        android:layout_height="287dp"
        android:layout_marginStart="62dp"
        android:layout_marginTop="161dp"
        android:layout_marginEnd="62dp"
        android:layout_marginBottom="29dp"
        app:layout_constraintBottom_toTopOf="@+id/tViewMain"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/drive_car"


        />


    <TextView
        android:id="@+id/tViewMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="68dp"
        android:layout_marginBottom="299dp"
        android:text="@string/driving_cars"
        android:textSize="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imgMain"
        app:layout_constraintTop_toBottomOf="@+id/imgMain" />


</androidx.constraintlayout.widget.ConstraintLayout>